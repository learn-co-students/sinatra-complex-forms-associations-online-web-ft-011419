<h1>Update Pet</h1>
<form method="post" action="/pets/<%=@pet.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <br>
  <input type="text" name="pet_name" id="pet_name" value="<%=@pet.name%>">
  <br>
  <label>Existing Owners:</label>
  <%@owners.each do |owner|%>
    <input type="radio" name="owner[name]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner.name.include?(owner.name) %>><%=owner.name%></input>
  <%end%>

  <br>
  <label>and/or, create a new owner:</label>
  <br>
  <label>Name:</label>
  <input type="text" name="owner_name" id="owner_name">

  <input type="submit" value="Update Pet">

</form>
